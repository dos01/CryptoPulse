<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cryptotrader.PortfolioController" stylesheets="@style.css">
   <children>
      <Label text="Portfolio Holdings" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
      
      <HBox spacing="10" alignment="CENTER">
         <children>
            <Button text="Refresh Portfolio" onAction="#handleRefresh" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Total P/L: " style="-fx-font-size: 18px;" />
            <Label fx:id="totalPLValue" text="$0.00" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
         </children>
         <padding>
            <Insets left="20" right="20" />
         </padding>
      </HBox>

      <TableView fx:id="portfolioTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="symbolColumn" text="Asset" prefWidth="150" />
          <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="120" />
          <TableColumn fx:id="avgPriceColumn" text="Avg Buy Price ($)" prefWidth="180" />
          <TableColumn fx:id="currentPriceColumn" text="Current Price ($)" prefWidth="180" />
          <TableColumn fx:id="plColumn" text="Profit/Loss ($)" prefWidth="150" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
